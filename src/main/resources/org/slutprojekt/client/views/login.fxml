<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.slutprojekt.client.controllers.LoginController"
      prefHeight="400.0" prefWidth="600.0"
      stylesheets="@../styles/global.css"
      alignment="CENTER" spacing="10.0">

    <TextField fx:id="usernameField" promptText="username"/>
    <PasswordField fx:id="passwordField" promptText="password"/>
    <Button onAction="#submit" text="Login"/>
    <Button onAction="#toStartScreen" text="Go back"/>
    <Label fx:id="errorLabel" styleClass="error"/>
</VBox>
